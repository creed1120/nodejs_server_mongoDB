<html lang="en">
  <%- include("./partials/head.ejs") %>
  <body>
    <%- include("./partials/nav.ejs") %>

    <div class="container">
      <div class="all-blogs">
        <h2>All Blogs</h2>
        <hr />
        <% if (blogs.length > 0) { %> <% blogs.forEach(blog => { %>

        <a href="/blogs/<%= blog._id %>">
          <h3><%= blog.title %></h3>
          <p><%= blog.snippet %></p>
        </a>

        <% }) %> <% } else { %>
        <p>There are no blogs to fetch.</p>
        <% } %>
      </div>
    </div>

    <%- include("./partials/footer.ejs") %>
  </body>
</html>
